$(document).ready(function() {
	$('#modalResolutionDoc').on('click', '#phrases p', function(){
		var old_text = $('#routedoc-resolution').val().trim();
		var text = $(this).text();
		if (old_text == ''){
			$('#routedoc-resolution').val(text.substr(0,1).toUpperCase() + text.substr(1));
		}else{
			$('#routedoc-resolution').val(old_text + ', ' + text);
		}

	});
    $(".send-code").click(function(){
    	alert('Yes');
		var objects = $(".sec");
		var count = parseInt(objects.html())
        if(count == 0){
			clearInterval(interval);
        	objects.html(60);
			interval = setInterval(Update, 1000);
		}

        //var fileid = $(this).data('fileid');
		/*
        var doc_id = 18;

        $.ajax({
            type: "POST",
            url: '/inbox/send-code',
            data: { 'id' : doc_id },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                //do something
                console.log(fileid);
                alert("working");
            },
            error: function (errormessage) {
                //do something else
                alert("not working");
            }
        });*/

    });
	var Update = function()
	{
		$('.sec').each(function()
		{
			var count = parseInt($(this).html())
			if (count !== 0){
				$(this).html(count - 1);
			}
		});
		
	};
	$('#modalButton').click(function (){
		$('#modal').modal('show')
			.find('#modalRegistrationDoc')
			.load($(this).attr('value'));
	})
	$('#modalRouteButton').click(function (){
		$('#modalRoute').modal('show')
			.find('#modalRouteDoc')
			.load($(this).attr('value'));
	})
	$('#modalResolutionButton').click(function (){
		$('#modalResolution').modal('show')
			.find('#modalResolutionDoc')
			.load($(this).attr('value'));
	})
	$('#modalCheckCodeButton').click(function (){
		$('#modalCheckCode').modal('show')
			.find('#modalCheckCodeDoc')
			.load($(this).attr('value'));
	})
	$('#modalContentButton').click(function (){
		$('#modalContent').modal('show')
			.find('#modalContentDoc')
			.load($(this).attr('value'));
	})

});